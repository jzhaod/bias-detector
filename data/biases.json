      "patterns": [
        "(?:always|never) (?:believed|thought|done)",
        "(?:stick to|maintain) (?:my|our) (?:position|belief|view)",
        "(?:can't|won't) change (?:my|our) mind",
        "(?:consistent with|supports) (?:my|our) (?:belief|view)"
      ],
      "examples": [
        "Refusing to update beliefs despite new evidence",
        "Maintaining ineffective habits",
        "Intensifying commitment after sacrifices"
      ],
      "antidotes": [
        "Actively seek disconfirming evidence",
        "Use Darwin's practice of considering contrary evidence",
        "Regularly review and update beliefs",
        "Reward changing your mind when warranted"
      ]
    },

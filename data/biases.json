{
  "biases": [
    {
      "id": 1,
      "name": "Reward and Punishment Super-Response Tendency",
      "category": "Incentive & Motivation",
      "description": "Overreaction to incentive systems, both positive and negative",
      "keywords": ["incentive", "reward", "punishment", "motivation", "bonus", "penalty", "compensation"],
      "patterns": [
        "gaming the system",
        "work(?:ing)? to (?:the )?incentives?",
        "perverse incentives?",
        "motivated by (?:money|rewards?|bonuses?)"
      ],
      "examples": [
        "Federal Express changed from hourly to shift-based pay to reduce deliberate delays",
        "Xerox salespeople sold inferior old models because commission was higher"
      ],
      "antidotes": [
        "Design incentives carefully to align with desired outcomes",
        "Monitor for gaming behavior regularly",
        "Consider unintended consequences of reward systems",
        "Fear professional advice when it's especially good for the adviser"
      ]
    },
    {
      "id": 2,
      "name": "Liking/Loving Tendency",
      "category": "Social & Emotional",
      "description": "Bias toward favoring people, products, and actions associated with liked entities",
      "keywords": ["like", "love", "prefer", "favorite", "admire", "respect", "fond"],
      "patterns": [
        "I (?:really )?like (?:this|that|him|her|them)",
        "because (?:I|we) (?:love|like|prefer)",
        "(?:my|our) favorite",
        "I admire (?:his|her|their)"
      ],
      "examples": [
        "Choosing products endorsed by liked celebrities",
        "Hiring people similar to yourself",
        "Ignoring faults in loved ones"
      ],
      "antidotes": [
        "Separate personal feelings from objective evaluation",
        "Use structured decision criteria",
        "Seek diverse perspectives",
        "Focus on facts rather than feelings"
      ]
    },
    {
      "id": 3,
      "name": "Disliking/Hating Tendency",
      "category": "Social & Emotional",
      "description": "Bias against people, products, and actions associated with disliked entities",
      "keywords": ["hate", "dislike", "can't stand", "terrible", "awful", "despise", "detest"],
      "patterns": [
        "I (?:really )?(?:hate|dislike|can't stand)",
        "(?:terrible|awful|horrible) (?:idea|person|company)",
        "because (?:I|we) (?:hate|dislike)",
        "never trust"
      ],
      "examples": [
        "Rejecting good ideas from disliked competitors",
        "Dismissing valid criticism from adversaries",
        "Distorting facts to facilitate hatred"
      ],
      "antidotes": [
        "Focus on merit rather than source",
        "Use blind evaluation processes",
        "Actively seek opposing viewpoints",
        "Separate message from messenger"
      ]
    },
    {
      "id": 4,
      "name": "Doubt-Avoidance Tendency",
      "category": "Cognitive Processing",
      "description": "Rush to eliminate uncertainty by reaching quick decisions",
      "keywords": ["must decide", "can't wait", "need certainty", "eliminate doubt", "quick decision"],
      "patterns": [
        "(?:must|need to) decide (?:now|quickly|immediately)",
        "can't (?:wait|delay|postpone)",
        "(?:eliminate|remove) (?:doubt|uncertainty)",
        "no time to (?:think|analyze)"
      ],
      "examples": [
        "Making hasty investment decisions to avoid uncertainty",
        "Rushing into relationships or commitments",
        "Quick religious or ideological conversions under stress"
      ],
      "antidotes": [
        "Force yourself to wait before major decisions",
        "Gather more information systematically",
        "Consider multiple alternatives",
        "Embrace uncertainty as natural"
      ]
    },
    {
      "id": 5,
      "name": "Inconsistency-Avoidance Tendency",
